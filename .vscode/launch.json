    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (No Args)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (No Colour)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "--no-color"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (version)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "version"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (help)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "help"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (init)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "init",
                "--packageName=test-javascript-requirejs",
                "--title=\"Test JavaScript RequireJS\"",
                "--sourceLanguage=JavaScript",
                "--moduleLoader=RequireJS",
                "--outputDirectory=d:\\unite\\test-javascript-requirejs"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (package add)",
            "program": "${workspaceRoot}\\bin\\unitejs-cli",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "package",
                "--operation=add",
                "--packageName=moment"
            ],
            "sourceMaps": true
        }
    ]
}